{
  "name": "blessed-things-protocol",
  "version": "0.0.1",
  "description": "Blessed Things Protocol",
  "scripts": {
    "test": "hardhat test",
    "test:gas": "REPORT_GAS=true npx hardhat test",
    "coverage": "REPORT_COVERAGE=true npx hardhat coverage",
    "dev": "tsc --watch",
    "lint": "npm run lint:js && npm run lint:sol",
    "lint:js": "eslint --ext .js --ignore-path .gitignore --fix",
    "lint:sol": "prettier --plugin prettier-plugin-solidity --write \"contracts/**/*.sol\""
  },
  "keywords": [
    "web3",
    "ethereum",
    "blessed",
    "referrents",
    "solidity",
    "ethglobal-2022-hackathon"
  ],
  "author": "Matt Mankins <mankins@gmail.com>",
  "license": "See LICENSE",
  "engines": {
    "node": "^16.13",
    "pnpm": "^7.1.0"
  },
  "files": [
    "/contracts/**/*.sol",
    "/build/contracts/*.json",
    "!/contracts/mocks/**/*"
  ],
  "dependencies": {
    "hardhat-abi-exporter": "^2.10.0"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.1.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.7.3",
    "@types/node": "^18.7.21",
    "chai": "^4.3.6",
    "dotenv": "^16.0.2",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.1",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.7.1",
    "hardhat": "^2.11.2",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "1.0.0-beta.24",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  }
}
